generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model University {
  id        String     @id @default(uuid())
  name      String
  slug      String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  foodDeals FoodDeal[]

  @@map("universities")
}

model FoodDeal {
  id           String     @id @default(uuid())
  title        String
  place        String
  timeStart    DateTime
  timeEnd      DateTime
  priceStart   Decimal?   @db.Decimal(10, 2)
  priceEnd     Decimal?   @db.Decimal(10, 2)
  description  String?
  reports      Int        @default(0)
  universityId String
  createdAt    DateTime   @default(now())
  university   University @relation(fields: [universityId], references: [id], onDelete: Cascade)

  @@map("food_deals")
}
